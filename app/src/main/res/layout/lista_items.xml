<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/blanco"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="20dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="194dp"
               android:src="@drawable/puente"
               android:scaleType="centerCrop" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#FBF6F6"
               android:orientation="vertical"
               android:padding="16dp">


               <TextView
                   android:id="@+id/id_titulo"
                   android:layout_width="77dp"
                   android:layout_height="30dp"
                   android:fontFamily="@font/aref_ruqaa"
                   android:hint="Titulo"
                   android:tag="Titulo"
                   android:paddingStart="12dp"
                   android:paddingEnd="12dp"
                   android:layout_marginTop="10dp"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"/>

               <TextView
                   android:id="@+id/id_descripcion"
                   android:layout_width="275dp"
                   android:layout_height="61dp"
                   android:layout_below="@+id/id_titulo"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/aref_ruqaa"
                   android:hint="DescripciÃ³n"
                   android:paddingStart="12dp"
                   android:paddingEnd="12dp"
                   android:textAppearance="?attr/textAppearanceBody2"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   android:textSize="14sp"
                   android:textStyle="italic" />

               <TextView
                   android:id="@+id/id_fecha"
                   android:layout_width="87dp"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/id_descripcion"

                   android:layout_gravity="bottom|center_vertical"
                   android:drawablePadding="12dp"
                   android:fontFamily="@font/aref_ruqaa"
                   android:hint="Fecha"
                   android:paddingStart="12dp"
                   android:paddingEnd="12dp"
                   android:textAlignment="textStart"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   android:textSize="14sp"
                   android:textStyle="italic"
                   tools:ignore="RtlCompat"
                   android:layout_marginTop="10dp"
                   tools:layout_editor_absoluteX="16dp"
                   tools:layout_editor_absoluteY="112dp" />


               <TextView
                   android:id="@+id/id_hora"
                   android:layout_width="88dp"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/id_fecha"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/aref_ruqaa"
                   android:hint="Hora"
                   android:paddingStart="12dp"
                   android:paddingEnd="12dp"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black" />


           </LinearLayout>

       </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>