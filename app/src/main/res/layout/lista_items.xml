<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/idIcono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        android:src="@drawable/ic_baseline_wb_sunny_24"
        app:srcCompat="@drawable/ic_baseline_wb_sunny_24"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/id_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paratexto"
            android:layout_marginBottom="7dp"

            android:hint="Titulo"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHint="?attr/colorBackgroundFloating"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/id_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paratexto"
            android:layout_marginBottom="7dp"
            android:text="DescripciÃ³n"
            android:textColor="@color/purpura"
            android:textSize="12sp"
            android:textStyle="italic"></TextView>

    </LinearLayout>

</LinearLayout>